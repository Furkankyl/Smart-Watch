<?xml version="1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imageViewPerson"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:transitionName="imageViewPerson"
        android:src="@drawable/profile_photo" />

    <LinearLayout
        android:id="@+id/linearLayoutPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="John Doe"
            android:textAlignment="center"
            android:transitionName="textViewPersonName"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPersonExplonation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="@string/lorem" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageButtonOptions"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


</LinearLayout>