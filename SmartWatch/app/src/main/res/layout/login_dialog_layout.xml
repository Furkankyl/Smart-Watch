<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giriş Yapılıyor"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTitle"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Lütfen bekleyin..." />
    <ProgressBar
        android:id="@+id/dialogProgress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/dialogMessage"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/dialogMessage"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_margin="20dp"
        android:src="@drawable/accept_icon" />
    <TextView
        android:id="@+id/dialogResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Başarılı"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_below="@id/dialogImageView"
        android:paddingBottom="10dp"/>
</RelativeLayout>